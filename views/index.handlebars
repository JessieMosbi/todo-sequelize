<div class="d-flex justify-content-center mt-5">
  <form class="form-inline" action="/">
    {{!-- 已完成: 查詢完成日期(data 更新日期) / 未完成: 查詢建立日期  / 所有: 查詢更新日期 or 建立日期--}}
    <select class="custom-select mr-sm-2" id="type" name="type">
      {{#each types}}
        <option value="{{this.id}}" {{#ifEqual this.id ../selType}}{{/ifEqual}}>
          {{this.name}}</option>
      {{/each}}
    </select>
    <label class="sr-only" for="sel-date">Name</label>
    <input type="date" class="form-control mr-sm-2" id="date" name="date" placeholder="請選擇欲查詢的日期" value="{{{selDate}}}">
    <button type="submit" class="btn btn-primary">查詢</button>
  </form>
</div>
<div class="text-right mt-5">
  <a href="/todos/new" class="btn btn-primary mb-3">Create</a>
</div>
<ul class="list-group">
  {{#each todos}}
    <li class="list-group-item">
      <div class="row">
        <div class="col-auto mr-auto">
          <input type="checkbox" name="done" {{#if this.done}} checked{{/if}} disabled>
          <h4 style="display: inline;vertical-align: middle;">{{{this.name}}}</h4>
        </div>
        <div class="col-auto">
          <a href="/todos/{{{this.id}}}" class="btn btn-secondary">detail</a>
          <a href="/todos/{{{this.id}}}/edit" class="btn btn-success">edit</a>
          <form action="/todos/{{{this.id}}}?_method=DELETE" method="post" style="display:inline">
            <button type="submit" class="btn btn-danger">delete</button>
          </form>
        </div>
      </div>
    </li>
  {{/each}}
</ul>