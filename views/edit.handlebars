<form action="/todos/{{{todo.id}}}?_method=PUT" method="POST">
  {{>messages}}
  <div class="input-group mb-3">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <input type="checkbox" name="done" {{#if todo.done }} checked{{/if}} />
      </div>
    </div>
    <input type="text" placeholder="name" name="name" value="{{{todo.name}}}" class="form-control" required="required">
  </div>
  <div class="form-group">
    <label for="memo">Memo</label>
    <textarea class="form-control" id="memo" name="memo" rows="3">{{{todo.memo}}}</textarea>
  </div>
  <div class="text-center">
    <button type="submit" class="btn btn-success">Edit</button>
  </div>
</form>